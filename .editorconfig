# http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false

[*.md]
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true

[*.java]
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.gradle]
trim_trailing_whitespace = true
insert_final_newline = true
